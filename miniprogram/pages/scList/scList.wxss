.header{
  margin: 0 30rpx;
  border-bottom: 1px solid gainsboro;
}
.title{
  font-size: 60rpx;
  font-weight: 500;
  margin: 50rpx 0;
}

.user_info{
  display: flex;
  justify-content: center;
}

.h_content{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.user_name{
  font-size: 30rpx;
  margin-left: 30rpx;
  line-height: 80rpx;
}

.user_avatar,.authhor_avatar{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
}

.h_content image{
  height: 60rpx;
  width: 60rpx;
}

.cd_content{
  font-size: 26rpx;
  margin-bottom: 30rpx;
}

/********************/
.caidan_list{
  margin: 30rpx;
}
.cd_item{
  margin: 50rpx 0;
}

.cv_img{
 height: 360rpx;
 background-color: gainsboro;
 border-radius: 20rpx;
 overflow: hidden;
 margin-bottom: 20rpx;
 position: relative;
}

.delete_item{
  position: absolute;
  right: 10rpx;
  top: 25rpx;
  background-color: rgba(0, 0, 0, 0.2);
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}

.delete_item image{
  height: 100%;
  width: 100%;
}

.authhor_avatar image{
  width: 100%;
  height: 100%;
}

.line_1{
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 36rpx;
}
.line_2{
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  color: grey
}