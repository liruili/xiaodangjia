/**index.wxss**/

.header {
  margin: 50rpx 0rpx;
  
}

/*头部*/

.logo {
  width: 150rpx;
  height: 150rpx;
}

.title {
  height: 150rpx;
  font-size: 60rpx;
  margin-left: 20rpx;
  line-height: 150rpx;
  text-align: center;
  color: #515151;
}

/*搜索框*/

.searchBar {
  width: 94%;
  height: 100rpx;
  background-color: #f1f2f6;
  margin: 0rpx auto 15rpx auto;
  border-radius: 10rpx;
  opacity: 0.5;
}

.searchBar image {
  height: 60rpx;
  width: 60rpx;
}

.searchBar text {
  font-size: 40rpx;
}

.info {
  font-size: 30rpx;
  text-align: center;
}

/****列表*****/

.list-page {
  display: flex;
  justify-content: space-around;
  margin-top: 50rpx;
}

.list {
  width: 45%;
}

.list-item{
  margin-top: 30rpx;
}

.img{
  border-radius: 10rpx;
  overflow: hidden;
}

.list image {
  width: 100%;
  border-radius: 20rpx;
}

.item-title {
  font-weight: 800;
  font-size: 30rpx;
  /*当行文字溢出省略*/
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.item-text{
  color: gainsboro;
  font-size: 22rpx;
}

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.block {
  width: 80%;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 0 0 60rpx gray;
  text-align: center;
  overflow: hidden;
}

.block_title{
  font-size: 40rpx;
  text-align: center;
  margin: 20rpx 0;
}

.block_msg{
  font-size: 34rpx;
  color: gray;
  margin: 0rpx 20rpx;
}

.block_action{
  display: flex;
  justify-content: center;
  font-size: 36rpx;
  margin-top: 20rpx;
  border-top: 1px solid #e9eaec;
}

.cancel{
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}
#sure{
  width: 300rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 0;
  min-height: 100rpx;
  font-size: 36rpx;
  font-weight: 100;
  padding: 0;
  background-color: #e55039;
  color: #fff
}
