/**********作品****************/


.zp_title{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 20rpx;
  border-top:1px solid gainsboro ;
  padding-top: 20rpx;
}

.zp_list{
  width: 100%;
  white-space:nowrap;
  margin-bottom: 50rpx;
}

.zp_title text:nth-child(1){
  font-size: 36rpx;
  font-weight: 700;
}

.zp_title text:nth-child(2){
  font-size: 30rpx;
  color: #e55039
}



.zp_item{
  width: 300rpx;
  border: 1px solid gainsboro;
  border-radius: 10rpx;
  overflow: hidden;
  display: inline-block;
  margin: 0 10rpx;
}
.zp_img{
  width: 300rpx;
  height: 300rpx;
}
.zp_user_info{
  margin: 10rpx 20rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.zp_user_info image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
}
.zp_user_info view{
  font-size: 25rpx;
  color: grey;
  margin: 0 10rpx;
}
.zp_cont{
  font-size: 26rpx;
  /* text-overflow: -o-ellipsis-lastline !important; */
  overflow: hidden;
  text-overflow: ellipsis !important;
  white-space: nowrap;
  /* display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center; */
  margin: 10rpx 20rpx;
}
.zp_footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 10rpx 20rpx;
}
.zp_good_btn{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  font-size: 25rpx;
}

.zp_good_btn image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.zp_time{
  font-size: 25rpx;
  color: gainsboro;
}

